<?xml version='1.0' encoding='UTF-8'?>
<robot name="Claptrap">
  <link name="world"/>
<!--
	Claptrap body
-->
  <joint name="BodyJoint" type="fixed">
<!--
    Joint height is used to mark wheel radius.
-->
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    <parent link="world"/>
    <child link="Body"/>
    <limit effort="1000.0" velocity="1000.0"/>
  </joint>
  <link name="Body">
    <inertial>
      <origin xyz="0.0 0.0 0.2" rpy="0.0 0.0 0.0"/>
      <mass value="10.0"/>
      <inertia ixx="0.8" ixy="0.0" ixz="0.0" iyy="0.8" iyz="0.0" izz="0.2"/>
    </inertial>
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <mesh filename="package://body.dae"/>
      </geometry>
      <material name="">
        <color rgba="1.0 1.0 1.0 0.3"/>
      </material>
    </visual>
  </link>
<!--
	Wheel body
-->
  <joint name="WheelJoint" type="revolute">
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    <axis xyz="0 1 0"/>
    <parent link="Body"/>
    <child link="Wheel"/>
    <limit effort="1000.0" velocity="1000.0"/>
  </joint>
  <link name="Wheel">
    <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <mass value="3.0"/>
<!--
      <inertia ixx="0.5" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.5"/>
-->
      <inertia ixx="0.25" ixy="0.0" ixz="0.0" iyy="0.25" iyz="0.0" izz="0.25"/>
    </inertial>
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <mesh filename="package://wheel.dae"/>
      </geometry>
      <material name="">
        <color rgba="1.0 1.0 1.0 0.3"/>
      </material>
    </visual>
  </link>
<!--
	Wheel rim: to define wheel diameter
-->  
<joint name="RimJoint" type="fixed">
<!--
    <origin xyz="0.0 0.0 0.08" rpy="0.0 0.0 0.0"/>
-->
    <origin xyz="0.0 0.0 0.15" rpy="0.0 0.0 0.0"/>
    <parent link="Body"/>
    <child link="WheelRim"/>
    <limit effort="1000.0" velocity="1000.0"/>
</joint>
<link name="WheelRim"/>
</robot>
